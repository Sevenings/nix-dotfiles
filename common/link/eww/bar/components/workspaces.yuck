(deflisten workspaces :initial "[{'window'}]"
"./scripts/workspaces.sh")

(deflisten active_workspace :initial "1"
"./scripts/active_workspace.sh")


(defwidget workspaces []
  (box :class "workspaces"
       :orientation "h"
       :halign "center"
    (for workspace in workspaces
      (label :class "workspace ${workspace.id == active_workspace ? "active" : ""}"
        :text "${workspace.id}"
      )
    )
  )
)
